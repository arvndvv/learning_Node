<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>
    <!-- Now we need to rename extension from html to ejs -->

    <body>
        <%- include('./partials/nav.ejs') %>
            <div class="blogs content">
                <h2>All Blogs</h2>

                <% if(blogs.length>0){%>
                    <% blogs.forEach(blog=>{%>
                        <h3 class="title">
                            <%=blog.title%>
                        </h3>
                        <p class="snippet">
                            <%=blog.snippet%>
                        </p>
                        <%})%>
                            <%} else {%>

                                <p>no blogs yet!</p>
                                <%}%>

            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>